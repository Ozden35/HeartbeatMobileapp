<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="168dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="114dp"
        android:src="@drawable/social" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="25dp"
        android:text="Bilgilerinizi bu sayfadan güncelleyebilirsiniz"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/oval_edittext_background"
        android:hint="Yeni Kullanıcı Adı"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextCurrentPassword"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/oval_edittext_background"
        android:hint="Mevcut Şifre"
        android:inputType="textPassword"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextCurrentPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/oval_edittext_background"
        android:hint="Yeni Şifre"
        android:inputType="textPassword"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextConfirmNewPassword"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNewPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="73dp"
        android:background="@drawable/oval_edittext_background"
        android:hint="Yeni Şifreyi Tekrar Girin"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextConfirmNewPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="133dp"
        android:background="@drawable/oval_button_background_green"
        android:text="Güncelle"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


</RelativeLayout>