<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.informationFragment">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="116dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/information"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageView7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="start">

            <!-- Başlık -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nabız ve Sağlık"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="8dp"/>

            <!-- Metin Paragrafı 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nabız, kalbin dakikada kaç kez attığını ifade eder. Sağlık durumunuzu izlemek ve değerlendirmek için önemli bir göstergedir."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <!-- Metin Paragrafı 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Normal bir yetişkinin dinlenme nabzı genellikle dakikada 60 ila 100 arasındadır. Daha düşük ya da daha yüksek değerler, sağlık sorunlarını işaret edebilir."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <!-- Metin Paragrafı 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Düzenli olarak nabzınızı kontrol etmek ve sağlıklı bir yaşam sürmek için düzenli egzersiz yapmalısınız. Ayrıca, sağlıklı bir beslenme düzeni de önemlidir."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <!-- Metin Paragrafı 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yüksek stres, yetersiz uyku ve kötü alışkanlıklar (sigara içmek, aşırı alkol tüketmek) gibi faktörler de nabzınızı etkileyebilir."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <!-- Metin Paragrafı 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sağlıklı bir yaşam sürmek ve kalp sağlığını korumak için düzenli olarak doktor kontrolünden geçmek önemlidir."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <!-- Metin Paragrafı 6 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nabız değerlerinizde belirgin bir değişiklik fark ederseniz veya herhangi bir sağlık sorunu yaşarsanız, bir sağlık uzmanına başvurmalısınız."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Normal nabız değerini belirlemek için yapılması gerekenleri madde madde açıklayalım:"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="1dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="1-Dinlenme Pozisyonunda Olun:\nNabız ölçümü yapmadan önce dinlenme pozisyonunda olmak önemlidir. Eğer birkaç dakika boyunca oturarak veya uzanarak dinlenirseniz, nabzınız daha doğru bir şekilde ölçülebilir."
                android:textColor="#666666"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="1dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2-Rahat ve Dik Durun:\nNabız ölçümü sırasında rahat bir pozisyonda durun ve mümkünse dik oturun veya yatın. Vücudunuzun rahat olması, doğru sonuçlar almanıza yardımcı olur."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3-Doğru Arteri Bulun:\nNabzı ölçmek için genellikle bilek veya boyun arterleri kullanılır. Bu arterlere parmağınızı yerleştirerek nabzı hissedin. Bilek arteri (radiyal arter) veya boyun arteri (karotis arter) sıklıkla kullanılan yerlerdir."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4-Parmakları Kullanarak Hissedin:\nSeçtiğiniz arter üzerine parmaklarınızı yerleştirin. Yavaşça bastırarak nabzı hissedin. Nabzı hissetmekte zorlanıyorsanız, parmaklarınızı biraz hareket ettirerek veya farklı bir konumda deneyerek nabzı bulmaya çalışın."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5-Sayın:\nNabzı hissetmeye başladıktan sonra 15 saniye boyunca nabzın kaç kez attığını sayın. Daha sonra bu sayıyı dörtle çarparak dakikadaki nabız sayısını bulabilirsiniz."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6-Not Alın:\nNabzınızı belirledikten sonra, sonucu bir kağıda veya cep telefonunuza not alın. Bu, nabzınızı düzenli olarak takip etmenize ve değişiklikleri fark etmenize yardımcı olabilir."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7-İdeal Nabız Aralığını Kontrol Edin:\nBulduğunuz nabız hızını normal aralıkta olup olmadığını kontrol edin. Normal yetişkinlerde genellikle dinlenme halinde 60 ila 100 arasında nabız hızı beklenir."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8-Doktora Danışın:\nEğer nabız hızınız normal aralıkta değilse veya düzenli olarak anormal nabızlar fark ediyorsanız, bir doktora danışmanız önemlidir. Doktorunuz nabzınızı daha detaylı bir şekilde değerlendirebilir ve gerekirse ek testler yapabilir."
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>